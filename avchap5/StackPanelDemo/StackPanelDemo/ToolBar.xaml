<Window x:Class="StackPanelDemo.ToolBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ToolBar" Height="300" Width="300"
    >
    <Grid>

          <ToolBar >
            <Button>1</Button>
            <Button>2</Button>
            <Button>3</Button>
            <Button>4</Button>
            <Button ToolBar.OverflowMode="Never">5</Button>
            <Button ToolBar.OverflowMode="Never">6</Button>
            <Button ToolBar.OverflowMode="AsNeeded">7</Button>
            <Button ToolBar.OverflowMode="Always">8</Button>
          </ToolBar>


  </Grid>
</Window>
